<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/outof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Out of Stock"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:background="#00D49B"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/srlno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Serial No"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/medinamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicine Name"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/outbtch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Batch No"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/generic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Generic Name"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/medsupp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Supplier"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#00D49B"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textSize="18sp"/>

    <ListView
        android:id="@+id/outOfStockListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
