<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/page_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:background="#00D49B"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/medin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial no "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>


        <EditText
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Serial No"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/medina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="medicine name "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>


        <EditText
            android:id="@+id/medinam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Name"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/packm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Packing no "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>


        <EditText
            android:id="@+id/pack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Packing"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/medgen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generic name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>


        <EditText
            android:id="@+id/generic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Generic Name"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/mspp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier name "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>


        <EditText
            android:id="@+id/medsupp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Supplier"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#00D49B"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textSize="16sp"/>

        <!-- TextView to display stored medicine records -->
        <TextView
            android:id="@+id/medicine_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No records found"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
