<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Page Heading -->

    <!-- Voucher Number Input -->
    <TextView
        android:id="@+id/vou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00D49B"
        android:gravity="center"
        android:padding="10dp"
        android:text="Purchase Report"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/vouc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Voucher Number"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:padding="8dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"/>

    <!-- Invoice Number Input -->
    <TextView
        android:id="@+id/inno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice Number"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/innno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Invoice number"
        android:textSize="14sp"
        android:padding="10dp"
        android:inputType="number"/>

    <!-- Purchase Date -->
    <TextView
        android:id="@+id/purdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Date"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/purchd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Purchase Date"
        android:textSize="14sp"
        android:padding="10dp"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"/>

    <!-- Total Amount -->
    <TextView
        android:id="@+id/totam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/totlamt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Amount"
        android:textSize="14sp"
        android:padding="10dp"/>

    <!-- Payment Status -->
    <RadioGroup
        android:id="@+id/paymentStatusGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/paymentPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Pending" />

        <RadioButton
            android:id="@+id/paymentDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Done" />
    </RadioGroup>

    <!-- Submit Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#00D49B"
        android:textColor="@android:color/white"
        android:padding="18dp"
        android:textSize="20sp"
        android:id="@+id/done"/>

    <!-- ListView to display saved data -->
    <ListView
        android:id="@+id/customer_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>
</ScrollView>