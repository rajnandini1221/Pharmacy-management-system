<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
  >

    <TextView
        android:id="@+id/mngsupp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Supplier"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:background="#00D49B"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/supsrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier Id "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>


    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id"
        android:textSize="14sp"
        android:padding="10dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/slna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier name "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>
    <EditText
        android:id="@+id/supname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:textSize="14sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/suped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/eml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="14sp"
        android:padding="10dp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/scnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/cntno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="no"
        android:textSize="14sp"
        android:padding="10dp"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/sadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/suppaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="add"
        android:textSize="14sp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:padding="18dp"
        android:textSize="20sp"
        android:backgroundTint="#00D49B"/>

    <ListView
        android:id="@+id/supplier_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
</LinearLayout>
</ScrollView>